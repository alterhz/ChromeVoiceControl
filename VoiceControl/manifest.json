{
  "manifest_version": 3,
  "name": "VoiceMate",
  "version": "1.0",
  "description": "Voice Control Assistant for Videosï¼ŒControl video playback with voice commands in both Chinese and English",
  "author": "Ziegler <550360139@qq.com>",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon_voice_control.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.bilibili.com/*",
        "*://*.youku.com/*",
        "*://*.iqiyi.com/*",
        "*://*.v.qq.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon_voice_control.png"
  }
}
